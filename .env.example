PORT=4000
NODE_ENV=development

# Database
MONGO_URI=mongodb://localhost:27017/todolist

# Auth
JWT_SECRET=una_clave_segura_aleatoria

# Client App
FRONTEND_URL=http://localhost:5173

# Email (SMTP) o Mailtrap.io para desarrollo
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM="RAJB-ToDoList" <no-reply@todolist.com>

# Demo account & cron
DEMO_USER_EMAIL=
DEMO_CLEAN_SCHEDULE=0 3 * * * # Borra las tareas cada dia
CRON_TZ=UTC
CLEAN_DEMO_ON_STARTUP=0 # Ejecutar limpieza al iniciar el servidor
DISABLE_CRON=0

# Security
RATE_LIMIT_LOGIN_MAX=10
RATE_LIMIT_FORGOT_MAX=5
RESET_TOKEN_TTL_MIN=60
ENABLE_CSP=0
ENABLE_PUBLIC_REGISTRATION=1
ENABLE_FORGOT_PASSWORD=1
